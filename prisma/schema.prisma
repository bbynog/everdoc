// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Condition {
    id                Int                @id @default(autoincrement())
    name              String
    diagnosticMetrics DiagnosticMetric[]
}

model DiagnosticMetric {
    id           Int         @id @default(autoincrement())
    name         String
    oruSonicCode String?
    diagnostic   Diagnostic? @relation(fields: [diagnosticId], references: [id])

    diagnosticGroups DiagnosticGroup[]
    oruSonicUnits    String?
    units            String?
    minAge           Int?
    maxAge           Int?
    gender           String            @default("Any")
    standardLower    Float?
    standardHigher   Float?
    everlabLower     Float?
    everlabHigher    Float?
    Condition        Condition?        @relation(fields: [conditionId], references: [id])
    conditionId      Int?
    diagnosticId     Int?
}

model Diagnostic {
    id                Int                @id @default(autoincrement())
    name              String
    diagnosticMetrics DiagnosticMetric[]
    diagnosticGroups  DiagnosticGroup[]
}

model DiagnosticGroup {
    id               Int                @id @default(autoincrement())
    name             String
    diagnostic       Diagnostic?        @relation(fields: [diagnosticId], references: [id])
    diagnosticMetric DiagnosticMetric[]
    diagnosticId     Int?
}
